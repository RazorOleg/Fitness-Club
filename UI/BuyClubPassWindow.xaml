        <TextBlock HorizontalAlignment="Left" Height="42" Margin="144,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="198" FontSize="20" Text="Прізвище:" TextAlignment="Center"/>
        <TextBox x:Name="userFirstName" HorizontalAlignment="Left" Height="40" Margin="47,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="394" Background="#FFE8E8E8" BorderBrush="#FF707070" FontStyle="Italic" FontSize="18"/>
