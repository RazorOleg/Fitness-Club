        <TextBox x:Name="city" HorizontalAlignment="Left" Height="40" Margin="124,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="317" Background="#FFE8E8E8" BorderBrush="#FF707070" FontStyle="Italic" FontSize="18"/>

